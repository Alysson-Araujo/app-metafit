<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".criarNovoGrupo.CreateGroup">

    <TextView
            android:text="Criar Grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textViewCriarGrupo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="101dp"/>
    <TextView
            android:text="Nome do Grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewNomeGrupo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="48dp"
            app:layout_constraintVertical_bias="0.24"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextNomeGrupo" tools:layout_editor_absoluteY="157dp"
            tools:layout_editor_absoluteX="159dp"/>
    <TextView
            android:text="Descrição"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewDescricaoGrupo"
            tools:layout_editor_absoluteY="231dp"
            tools:layout_editor_absoluteX="61dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editTextTextMultiLineDescricao" tools:layout_editor_absoluteY="221dp"
            tools:layout_editor_absoluteX="159dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>